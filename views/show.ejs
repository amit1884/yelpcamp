<%- include('./partials/header.ejs') %>


<div class ="container">
    <div class= "row">
        <div class= "col-md-3 col-xs-12">
            <p class ="lead">YelpCamp</p>
            <div class ="list-group">
                <li class ="list-group-item active">Category 1</li>
                <li class ="list-group-item">Category 2</li>
                <li class ="list-group-item">Category 3</li>
                <li class ="list-group-item">Category 4</li>
            </div>
            <div class ="map">

            </div>
        </div>
        <div class= "col-md-9 col-xs-12">
            <div class= "thumbnail">
                <img class ="img-responsive"src ="<%= campground.image %>" width="900" height="400">
                <div class ="caption-full">
                    <div style ="float:right"><h4>$9.00/night</h4></div>
                    <a href ="#"><h4><%= campground.name %></h4></a>
                    <p><%= campground.description %></p>
                </div>
            </div>
            <div class ="jumbotron">
                <div class ="text-right"><a href ="/campgrounds/<%=campground._id %>/comments/new"><button class ="btn btn-primary">Leave Review</button></a></div>
                <hr>
                <% campground.comments.forEach((comment)=>{ %>
                    <div class= "row">
                        <div class= "col-md-12">
                            <strong style= "text-transform: capitalize;"><%=comment.author%></strong>
                            <div class ="text-right">10 Days ago</div>
                            <%=comment.text %></p><hr>
                        </div>
                    </div>   
                    <% })%>
            </div>
        </div>
    </div>
</div>

<%- include('./partials/footer.ejs') %>